{
  "name": "typescript-jest",
  "version": "0.0.1",
  "description": "A barebones starter for spinning up a TypeScript/Jest environment",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc",
    "exportCP": "yarn ts-node cli/exportCP.ts",
    "importCP": "yarn ts-node cli/importCP.ts",
    "stake": "yarn ts-node cli/stake.ts",
    "getAddresses": "yarn ts-node cli/getAddresses.ts",
    "getBalance": "yarn ts-node cli/getBalance.ts",
    "getHash": "yarn ts-node cli/getHash.ts",
    "toPChainAddress": "yarn ts-node cli/toPChainAddress.ts",
    "validatorsInfo": "yarn ts-node cli/validatorsInfo.ts",
    "networkInfo": "yarn ts-node cli/networkInfo.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "jest --coverage --findRelatedTests",
      "git add"
    ]
  },
  "keywords": [],
  "author": "github.com/martingaston",
  "license": "MIT",
  "devDependencies": {
    "@types/request": "^2.48.8",
    "@types/jest": "^24.0.15",
    "@types/node": "*",
    "@types/yargs": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.1.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "bech32": "^2.0.0",
    "bech32-converting": "^1.0.9",
    "dotenv": "^16.0.1",
    "fast-sha256": "^1.3.0",
    "flare": "../flarejs",
    "request": "^2.88.2",
    "web3": "^1.7.5",
    "yargs": "^17.5.1"
  }
}
