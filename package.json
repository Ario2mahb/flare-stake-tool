{
  "name": "typescript-jest",
  "version": "0.0.1",
  "description": "A barebones starter for spinning up a TypeScript/Jest environment",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "tsc": "tsc",
    "export": "yarn ts-node src/exportTxCP.ts",
    "import": "yarn ts-node src/importTxCP.ts",
    "stake": "yarn ts-node src/addValidator.ts",
    "getAddresses": "yarn ts-node src/deriveAddresses.ts",
    "getHash": "yarn ts-node src/deriveConfigHash.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "jest --coverage --findRelatedTests",
      "git add"
    ]
  },
  "keywords": [],
  "author": "github.com/martingaston",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.1.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "@avalabs/avalanche-wallet-sdk": "^0.18.1",
    "avalanche": "../avalanchejs-flare",
    "@types/bs58check": "^2.1.0",
    "base32-encode": "^2.0.0",
    "bech32": "^2.0.0",
    "bech32-buffer": "^0.2.0",
    "bech32-converting": "^1.0.9",
    "bs58check": "^2.1.2",
    "dotenv": "^16.0.1",
    "fast-sha256": "^1.3.0",
    "web3": "^1.7.5"
  }
}
